<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
	
		<?include ..\..\common\buildenv.wxi ?>
		<?include $(var.ZucchiniSourcePath)web\_version\webversion.wxi ?>
	
		<Product Id="84723dbe-86a8-4f12-bb61-aa3427076125" 
			Name="Zucchini $(var.ProjectVersion.2) Runtime (x86)" 
			Language="1033" 
			Version="$(var.ProjectVersion.3)" 
			Manufacturer="ZukiSoft" 
			UpgradeCode="1640010c-83a0-42ca-a6b6-6fff33d490fd">
		
		<Package InstallerVersion="300" Compressed="yes" Platforms="Intel"/>
		<Media Id="1" Cabinet="runtime_x86.cab" EmbedCab="yes" />

		<!-- CONDITION: Microsoft .NET Framework 2.0 -->
		<Condition Message='The Microsoft .NET Framework version 2.0 (or higher) is not installed. Please install before running Zucchini Runtime setup.'>
			<![CDATA[MsiNetAssemblySupport >= "2.0.50727"]]>
		</Condition>

		<!-- CONDITION: Windows XP Service Pack 2 or higher -->
		<Condition Message='The Zucchini Runtime requires Microsoft Windows XP Service Pack 2 (or higher).'>
			(VersionNT >= 502) OR (VersionNT = 501 AND ServicePackLevel >= 2)
		</Condition>

		<Directory Id="TARGETDIR" Name="SourceDir">
			<Merge Id="zucchini" Language="0" DiskId="1" SourceFile="$(var.ZucchiniRedistPath)zucchini-runtime-x86.msm"/>
			<Merge Id="msvcrt" Language="0" DiskId="1" SourceFile="$(var.MergeModulePath)Microsoft_VC80_CRT_x86.msm"/>
			<Merge Id="msvcrtpol" Language="0" DiskId="1" SourceFile="$(var.MergeModulePath)policy_8_0_Microsoft_VC80_CRT_x86.msm"/>
		</Directory>

		<Feature Id="RuntimeFeature" Title="Zucchini Runtime (x86)" Level="1"
				Description="Installs the Zucchini and Microsoft Visual C++ Runtime Libraries (as necessary)"
				Absent="disallow" AllowAdvertise="no">
			<MergeRef Id="zucchini" />
			<MergeRef Id="msvcrt" />
			<MergeRef Id="msvcrtpol" />
		</Feature>

	<UIRef Id="WixUI_FeatureTree"/>

	</Product>
</Wix>
